    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Flask Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Open Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Flask + Chrome",
            "configurations": ["Run Flask Server", "Open Chrome"]
        }
    ]
}
